{
  "parser": "@oigroup/lightscript-eslint",
  "rules": {
    "linebreak-style": [
      2,
      "unix"
    ],
    "no-console": 0
  },
  "parserOptions": {
    "sourceType": "module"
  },
  "env": {
    "mocha": true,
    "node": true,
    "shared-node-browser": true,
    "es6": true
  },
  "extends": "eslint:recommended"
}

