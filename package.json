{
  "name": "@lightscript/tooling-tests",
  "version": "4.0.0",
  "private": true,
  "description": "Test LightScript against common ecosystem tools",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "build": "babel -x \".js\",\".lsc\" src --out-dir lib",
    "test": "npm run build && jest",
    "test:only": "jest"
  },
  "license": "MIT",
  "dependencies": {
    "@lightscript/babel-preset": "4.0.0-alpha.13",
    "@lightscript/eslint-plugin": "4.0.0-alpha.13",
    "@babel/core": "^7.1.0",
    "@babel/cli": "^7.1.0",
    "@babel/preset-env": "^7.1.0",
    "jest": "^23.6.0",
    "eslint": "^5.6.0"
  },
  "jest": {
    "moduleFileExtensions": ["js", "jsx", "json", "lsc", "lsx"],
    "transform": {
      "^.+\\.(lsc|lsx)$": "<rootDir>/preprocessor.lsc.js"
    },
    "testRegex": "(\\.|/)test\\.(lsc|lsx)$"
  }
}
